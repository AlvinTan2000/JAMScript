{
  "package" : {
    "name": "JView",
    "version": "1.0.0",
    "description": "A Simple JView system using React+Mobx+Node+MongoDB",
    "author": "Carl Liu"
  },
  "path" : "./app",
  "port" : "3000",
  "pages" : [
    {
      "name" : "Controller Panel",
      "route" : "/controller-panel",
      "layout" : "default",
      "panels" : [
        {
          "type": "Controller",
          "controlList": [
            {
              "type": "slider",
              "dispLabel": "Controller #1",
              "max": 100,
              "min": 0,
              "step": 10,
              "trigger": "emitValue"
            }
          ],
          "store": {
            "maxValue": "100",
            "minValue": "0",
            "stepValue": "10"
          }
        } 
      ]
    }
  ]
}